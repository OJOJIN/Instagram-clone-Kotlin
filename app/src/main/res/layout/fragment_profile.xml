<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"/>

    <ImageView
        android:id="@+id/ib_profile_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@+id/ib_profile_hambuger"
        app:layout_constraintTop_toTopOf="@+id/text_profile_name"/>

    <ImageView
        android:id="@+id/ib_profile_hambuger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hamburger"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/ib_profile_plus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_profile_name" />

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_profile_default"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_name"
        app:layout_constraintStart_toStartOf="@+id/text_profile_name"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_post_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-condensed"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_num2"
        app:layout_constraintStart_toStartOf="@+id/text_num2"
        app:layout_constraintTop_toTopOf="@+id/image_profile" />

    <TextView
        android:id="@+id/text_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="55dp"
        android:text="게시물"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile"
        app:layout_constraintStart_toEndOf="@+id/image_profile"/>

    <TextView
        android:id="@+id/tv_follower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_num4"
        app:layout_constraintStart_toStartOf="@+id/text_num4"
        app:layout_constraintTop_toTopOf="@+id/tv_post_cnt" />

    <TextView
        android:id="@+id/text_num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="45dp"
        android:text="팔로워"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_num2"
        app:layout_constraintStart_toEndOf="@+id/text_num2"
        app:layout_constraintTop_toTopOf="@+id/text_num2" />

    <TextView
        android:id="@+id/tv_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_num6"
        app:layout_constraintStart_toStartOf="@+id/text_num6"
        app:layout_constraintTop_toTopOf="@+id/tv_follower" />

    <TextView
        android:id="@+id/text_num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginStart="45dp"
        android:text="팔로잉"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_num4"
        app:layout_constraintStart_toEndOf="@+id/text_num4"
        app:layout_constraintTop_toTopOf="@+id/text_num4" />


    <TextView
        android:id="@+id/text_profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/image_profile"
        app:layout_constraintTop_toBottomOf="@+id/image_profile" />

    <TextView
        android:id="@+id/text_profile_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text_profile_status"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_status" />


    <Button
        android:id="@+id/btn_profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/button_background_1"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="135dp"
        android:layout_marginTop="12dp"
        android:textSize="13sp"
        android:text="프로필 편집"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/text_profile_info"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_info" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_background_1"
        android:fontFamily="sans-serif-medium"
        android:scaleType="fitXY"
        android:src="@drawable/ic_recommend_friend"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_profile_edit" />


    <TextView
        android:id="@+id/text_profile_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="스토리 하이라이트"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/btn_profile_edit"
        app:layout_constraintTop_toBottomOf="@+id/btn_profile_edit" />

    <TextView
        android:id="@+id/txt_story_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="좋아하는 스토리를 프로필에 보관해보세요"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/text_profile_story"
        app:layout_constraintTop_toBottomOf="@+id/text_profile_story" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_profile_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_story_text"
        tools:listitem="@layout/story_rv_item" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/profile_tab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIconTint="@color/select_color"
        app:tabIndicatorColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_profile_story">
<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:icon="@drawable/ic_postgrid"-->
<!--            android:background="@color/silver_3"-->
<!--            />-->

<!--        <com.google.android.material.tabs.TabItem-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:icon="@drawable/ic_person"/>-->

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>